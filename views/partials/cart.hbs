

{{# each products}}
    <div class="container">
        <div class="row">
            {{# each this}}
                <div class="col">
                    <!--Card 1 -->
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-10">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">Quanity: {{qty}}</p>
                                    <a href="#" class="btn btn-primary">Remove</a>
                                </div>
                                <div class="col-2 ml-auto">
                                    <img class="card-img-top ml-auto" src="{{path}}" alt="Card image cap">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Card 1 end-->
                </div>
            {{/each}}
        </div>
    </div>
{{/each}}

